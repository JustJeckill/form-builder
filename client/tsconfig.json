{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom",
      "dom.iterable",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "react"
      }
    ],
    "baseUrl": ".",       // важно, чтобы paths работал от корня
    "paths": {
      "@/*": ["src/*"]   // алиас @/ → папка src
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
